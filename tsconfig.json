{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "declaration": true,
    "lib": [
      "es6",
      "dom"
    ],
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": ".",
    "strict": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "functions/node_modules"
  ]
}
